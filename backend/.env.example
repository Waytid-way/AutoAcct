# ===========================
# DUAL MODE SETTINGS
# ===========================
APP_MODE=dev
# Options: dev | staging | production

IS_DEBUG=true
# Set to false in production

NODE_ENV=development
# Options: development | production | test

# ===========================
# DATABASE
# ===========================
MONGODB_URI=mongodb://localhost:27017/autoacct-dev
MONGODB_REPLICA_SET=rs0

# ===========================
# AUTHENTICATION
# ===========================
JWT_SECRET=your-super-secret-key-min-32-chars-dev-only-change-in-prod
JWT_EXPIRY=24h

# ===========================
# EXTERNAL SERVICES (Adapters)
# ===========================
# OCR Worker
OCR_WORKER_URL=http://localhost:8000

# Express Accounting API
EXPRESS_MODE=debug
# Options: debug | staging | production

EXPRESS_API_URL=http://localhost:9000
# DEV: http://localhost:9000 (Mock)
# PROD: https://api.express.co.th

EXPRESS_API_KEY=mock-key-debug

# Groq AI
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile

# Teable
TEABLE_API_URL=https://app.teable.io/api
TEABLE_API_KEY=your-teable-api-key
TEABLE_BASE_ID=your-base-id
TEABLE_RECEIPT_TABLE_ID=your-table-id

# ===========================
# LOGGING
# ===========================
LOG_LEVEL=debug
# Options: debug | info | warn | error

DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
# For critical error alerts (optional)

# ===========================
# RETRY LOGIC (Exponential Backoff)
# ===========================
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_INTERVAL_MS=300000
# 5 minutes in milliseconds

RETRY_MAX_INTERVAL_MS=3600000
# 1 hour in milliseconds

RETRY_BACKOFF_MULTIPLIER=1.5

# ===========================
# ENCRYPTION
# ===========================
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
# Must be 32-byte hex (64 characters)
# Generate with: openssl rand -hex 32

# ===========================
# SERVER
# ===========================
PORT=3000
HOST=0.0.0.0
