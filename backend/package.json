{
  "name": "autoacct-backend",
  "version": "1.0.0",
  "description": "AutoAcct Backend - OCR AI Auto Accounting System",
  "main": "src/app.ts",
  "scripts": {
    "dev": "bun --watch src/app.ts",
    "build": "bun build src/app.ts --outdir dist --target bun",
    "start": "bun dist/app.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "db:migrate": "bun migrations/001-init-schema.ts",
    "mock:express": "PORT=9000 bun src/mock-servers/express-mock.ts",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@biomejs/biome": "^1.4.1",
    "bun-types": "latest"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
