# ===========================================
# AutoAcct Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===========================================
# DEPLOYMENT TOKENS
# ===========================================
FLY_API_TOKEN=your_fly_io_api_token_here
VERCEL_TOKEN=your_vercel_token_here

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
# DUAL MODE SETTINGS
APP_MODE=production
IS_DEBUG=false
NODE_ENV=production

# DATABASE
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/autoacct-prod
MONGODB_REPLICA_SET=rs0

# AUTHENTICATION
JWT_SECRET=your-super-secret-key-min-32-chars-change-this-in-production
JWT_EXPIRY=24h

# EXTERNAL SERVICES (Adapters)
# OCR Worker
OCR_WORKER_URL=http://localhost:8000

# Express Accounting API
EXPRESS_MODE=production
EXPRESS_API_URL=https://api.express.co.th
EXPRESS_API_KEY=your_express_api_key

# Groq AI
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile

# Teable
TEABLE_API_URL=https://app.teable.io/api
TEABLE_API_KEY=your-teable-api-key
TEABLE_BASE_ID=your-base-id
TEABLE_RECEIPT_TABLE_ID=your-table-id

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_BASE_URL=https://autoacct-api.fly.dev/api
NEXT_PUBLIC_API_TIMEOUT=30000

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ===========================================
# RETRY LOGIC
# ===========================================
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_INTERVAL_MS=300000
RETRY_MAX_INTERVAL_MS=3600000
RETRY_BACKOFF_MULTIPLIER=1.5

# ===========================================
# ENCRYPTION
# ===========================================
# Must be 32-byte hex (64 characters)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ===========================================
# SERVER
# ===========================================
PORT=3000
HOST=0.0.0.0
